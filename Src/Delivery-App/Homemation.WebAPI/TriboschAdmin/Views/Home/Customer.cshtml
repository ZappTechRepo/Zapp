@model IEnumerable<TriboschAdmin.Customer>

@{
    ViewBag.Title = "Product";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("Customer", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input  type="file" name="file" />
    <br />
    <input type="submit" value="OK" />
}
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.Address1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.Address2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.Address3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.PostalCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.GPSCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
               {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses.First().Address1))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses.First().Address2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses.First().Address3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses.First().PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses.First().GPSCode)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CustomerID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
                    </td>
                </tr>
               }
      
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
    
</div>
