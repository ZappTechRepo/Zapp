@model IEnumerable<TriboschAdmin.Product>

@{
    ViewBag.Title = "Product";
}

<h2>View</h2>

<p class="btn btn-success pull-right">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn-success" })
</p>


@using (Html.BeginForm("Product", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input class="btn btn-lg btn-success" type="file" name="file" />
    <br />
    <input class="btn btn-primary" type="submit" value="OK" />
}
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PackSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriceExcl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RetailPriceExcl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RetailPriceIncl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
               {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceExcl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetailPriceExcl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetailPriceIncl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditProducts", new { id = item.id }) |
                       @* @Html.ActionLink("Details", "Details", new { id = item.id }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
               }
      
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
    
</div>
